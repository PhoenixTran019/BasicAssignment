@model Cinema_Assignment.Models.EmployeesModel
@{
    ViewBag.Title = "❌ Xác nhận xóa nhân viên";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning">
    <strong>Bạn có chắc chắn muốn xóa nhân viên này không?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Mã nhân viên</dt>
    <dd class="col-sm-9">@Model.EmployeeId</dd>

    <dt class="col-sm-3">Họ tên</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
</form>
