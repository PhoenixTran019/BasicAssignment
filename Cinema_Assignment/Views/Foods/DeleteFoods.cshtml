@model Cinema_Assignment.Models.FoodModel

@{
    ViewBag.Title = "Xóa món ăn";
}

<h2 class="text-danger">🗑️ Xóa món ăn</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa món ăn <strong>@Model.Name</strong> không?
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="FoodID" />

    <dl class="row">
        <dt class="col-sm-2">Tên món</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("N0") đ</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Decription</dd>

        <dt class="col-sm-2">Ảnh</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="@Model.Image" width="100" />
            }
        </dd>
    </dl>

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
