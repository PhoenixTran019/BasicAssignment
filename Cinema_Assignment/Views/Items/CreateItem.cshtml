@model Cinema_Assignment.Models.ItemModel

@{
    ViewBag.Title = "Thêm mặt hàng mới";
}

<h2>Thêm mặt hàng mới</h2>

<form asp-action="CreateItem" method="post">

    <div class="form-group">
        <label asp-for="ItemID"></label>
        <input asp-for="ItemID" class="form-control" readonly />
        <input type="hidden" asp-for="ItemID" />
    </div>

    <div class="form-group">
        <label for="ItemName">Tên mặt hàng</label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Unit">Đơn vị</label>
        <input asp-for="Unit" class="form-control" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="QuanlityPerUnit">Số lượng mỗi đơn vị</label>
        <input asp-for="QuanlityPerUnit" type="number" class="form-control" />
        <span asp-validation-for="QuanlityPerUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Category">Phân loại</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
