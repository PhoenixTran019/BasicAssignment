@model ItemModel

<div class="container mt-4">
    <h2 class="text-primary mb-4">➕ Thêm mặt hàng mới</h2>

    <form asp-action="CreateItems" method="post" class="card shadow-sm p-4">
        <div class="form-group">
            <label asp-for="ItemID"></label>
            <input asp-for="ItemID" class="form-control" readonly />
            <input type="hidden" asp-for="ItemID" />
        </div>

        <div class="mb-3">
            <label asp-for="ItemName" class="form-label">Tên mặt hàng</label>
            <input asp-for="ItemName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Đơn vị</label>
            <select class="form-select" id="unitSelect" required>
                <option value="">-- Chọn đơn vị --</option>
                <option value="Cái">Cái</option>
                <option value="Hộp">Hộp</option>
                <option value="Kg">Kg</option>
                <option value="Thùng">Thùng</option>
                <option value="Chai">Chai</option>
                <option value="Khác">Khác</option>
            </select>

            <input type="text" class="form-control mt-2" id="unitCustom" placeholder="Nhập đơn vị khác"
                   style="display:none;" />

            <!-- Field ẩn để model binding về Item.Unit -->
            <input type="hidden" asp-for="Unit" id="unitFinal" />
        </div>

        <div class="mb-3">
            <label asp-for="QuanlityPerUnit" class="form-label">Số lượng / đơn vị</label>
            <input asp-for="QuanlityPerUnit" class="form-control" type="number" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Loại</label>
            <select class="form-select" id="categorySelect" required>
                <option value="">-- Chọn loại --</option>
                <option value="Thực phẩm">Thực phẩm</option>
                <option value="Đồ gia dụng">Đồ gia dụng</option>
                <option value="Đồ uống">Đồ uống</option>
                <option value="Thiết bị">Thiết bị</option>
                <option value="Khác">Khác</option>
            </select>

            <input type="text" class="form-control mt-2" id="categoryCustom" placeholder="Nhập loại khác"
                   style="display:none;" />

            <input type="hidden" asp-for="Category" id="categoryFinal" />
        </div>


        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅️ Quay lại</a>
            <button type="submit" class="btn btn-primary">💾 Tạo mới</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const unitSelect = document.getElementById("unitSelect");
        const unitCustom = document.getElementById("unitCustom");
        const unitFinal = document.getElementById("unitFinal");

        const categorySelect = document.getElementById("categorySelect");
        const categoryCustom = document.getElementById("categoryCustom");
        const categoryFinal = document.getElementById("categoryFinal");

        unitSelect.addEventListener("change", function () {
            if (this.value === "Khác") {
                unitCustom.style.display = "block";
                unitCustom.required = true;
                unitFinal.value = "";
            } else {
                unitCustom.style.display = "none";
                unitCustom.required = false;
                unitCustom.value = "";
                unitFinal.value = this.value;
            }
        });

        unitCustom.addEventListener("input", function () {
            unitFinal.value = this.value;
        });

        categorySelect.addEventListener("change", function () {
            if (this.value === "Khác") {
                categoryCustom.style.display = "block";
                categoryCustom.required = true;
                categoryFinal.value = "";
            } else {
                categoryCustom.style.display = "none";
                categoryCustom.required = false;
                categoryCustom.value = "";
                categoryFinal.value = this.value;
            }
        });

        categoryCustom.addEventListener("input", function () {
            categoryFinal.value = this.value;
        });
    });
</script>

