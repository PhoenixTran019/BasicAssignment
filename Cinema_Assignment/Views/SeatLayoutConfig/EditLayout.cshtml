@model Cinema_Assignment.Models.SeatLayoutConfigModel

@{
    ViewBag.Title = "Sửa khu vực ghế";
}

<div class="container mt-4">
    <h2>✏️ Sửa khu vực ghế</h2>

    <form asp-action="EditLayout" method="post">
        <input type="hidden" asp-for="LayoutID" />
        <input type="hidden" asp-for="RoomID" />

        <div class="mb-3">
            <label>Hàng bắt đầu</label>
            <input asp-for="StartRow" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Hàng kết thúc</label>
            <input asp-for="EndRow" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Cột bắt đầu</label>
            <input asp-for="StartCol" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Cột kết thúc</label>
            <input asp-for="EndCol" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Loại ghế</label>
            <select asp-for="SeatType" class="form-select">
                @foreach (var type in (List<SelectListItem>)ViewBag.SeatTypes)
                {
                    <option value="@type.Value" selected="@(type.Value == Model.SeatType.ToString())">@type.Text</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Lưu</button>
        <a asp-action="Index" asp-route-roomId="@Model.RoomID" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
